// capacitor.config
// Capacitor configuration file

// Include any project-specific settings here
// This file is referenced by the Pods xcconfig files

// iOS deployment target
IPHONEOS_DEPLOYMENT_TARGET = 14.0

// Bundle identifier
PRODUCT_BUNDLE_IDENTIFIER = me.iarm.foodbuddy

// App name
PRODUCT_NAME = foodbuddy

// Swift version
SWIFT_VERSION = 5.0

// Target device families (iPhone and iPad)
TARGETED_DEVICE_FAMILY = 1,2

// Enable modules
CLANG_ENABLE_MODULES = YES

// Enable ARC
CLANG_ENABLE_OBJC_ARC = YES

// Library settings
CLANG_CXX_LIBRARY = libc++
CLANG_CXX_LANGUAGE_STANDARD = gnu++14

// Search paths (these will be overridden by actual paths in the real config)
HEADER_SEARCH_PATHS = $(inherited)
